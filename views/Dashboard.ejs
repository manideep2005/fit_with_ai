<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FitWit AI - Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <%- include('partials/navigation', { currentPage: 'dashboard' }) %>
        </aside>

        <!-- Mobile Menu Button -->
        <button class="mobile-menu-btn" id="mobileMenuBtn">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <h1 class="page-title">Welcome back, <span><%= user.fullName %></span>!</h1>
                <div class="header-actions">
                    <div class="search-bar">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" placeholder="Search...">
                    </div>
                    <button class="notification-btn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                </div>
            </div>

            <div class="dashboard-grid">
                <!-- Stats Widgets -->
                <div class="widget widget-sm">
                    <div class="widget-header">
                        <div class="widget-title">Calories Burned</div>
                        <div class="widget-action"><i class="fas fa-ellipsis-h"></i></div>
                    </div>
                    <div class="stat-value" data-target="2845">0</div>
                    <div class="stat-label">Daily Goal: 3,000</div>
                    <div class="stat-change stat-increase">
                        <i class="fas fa-arrow-up"></i>
                        <span>15% from last week</span>
                    </div>
                </div>

                <div class="widget widget-sm">
                    <div class="widget-header">
                        <div class="widget-title">Active Minutes</div>
                        <div class="widget-action"><i class="fas fa-ellipsis-h"></i></div>
                    </div>
                    <div class="stat-value" data-target="87">0</div>
                    <div class="stat-label">Daily Goal: 120</div>
                    <div class="stat-change stat-increase">
                        <i class="fas fa-arrow-up"></i>
                        <span>23% from last week</span>
                    </div>
                </div>

                <div class="widget widget-sm">
                    <div class="widget-header">
                        <div class="widget-title">Steps</div>
                        <div class="widget-action"><i class="fas fa-ellipsis-h"></i></div>
                    </div>
                    <div class="stat-value" data-target="8742">0</div>
                    <div class="stat-label">Daily Goal: 10,000</div>
                    <div class="stat-change stat-increase">
                        <i class="fas fa-arrow-up"></i>
                        <span>8% from last week</span>
                    </div>
                </div>

                <div class="widget widget-sm">
                    <div class="widget-header">
                        <div class="widget-title">Fitness Score</div>
                        <div class="widget-action"><i class="fas fa-ellipsis-h"></i></div>
                    </div>
                    <div class="stat-value" data-target="78">0</div>
                    <div class="stat-label">Great Progress!</div>
                    <div class="stat-change stat-increase">
                        <i class="fas fa-arrow-up"></i>
                        <span>5 points this month</span>
                    </div>
                </div>

                <!-- Weekly Progress Chart -->
                <div class="widget widget-full">
                    <div class="widget-header">
                        <div class="widget-title">Weekly Activity</div>
                        <div class="widget-action"><i class="fas fa-sync-alt"></i></div>
                    </div>
                    <div class="chart-container">
                        <canvas id="weeklyActivityChart"></canvas>
                    </div>
                </div>

                <!-- Today's Workout -->
                <div class="widget widget-md">
                    <div class="widget-header">
                        <div class="widget-title">Today's Workout</div>
                        <div class="widget-action"><i class="fas fa-play-circle"></i></div>
                    </div>
                    <div class="workout-list">
                        <div class="workout-item">
                            <div class="workout-info">
                                <div class="workout-icon"><i class="fas fa-running"></i></div>
                                <div class="workout-details">
                                    <h4>Warm-up Cardio</h4>
                                    <p>10 minutes at moderate pace</p>
                                </div>
                            </div>
                            <div class="workout-time">7:00 AM</div>
                        </div>
                        <div class="workout-item">
                            <div class="workout-info">
                                <div class="workout-icon"><i class="fas fa-dumbbell"></i></div>
                                <div class="workout-details">
                                    <h4>Upper Body Strength</h4>
                                    <p>4 sets Ã— 12 reps</p>
                                </div>
                            </div>
                            <div class="workout-time">7:15 AM</div>
                        </div>
                        <div class="workout-item">
                            <div class="workout-info">
                                <div class="workout-icon"><i class="fas fa-heartbeat"></i></div>
                                <div class="workout-details">
                                    <h4>HIIT Session</h4>
                                    <p>20 minutes interval training</p>
                                </div>
                            </div>
                            <div class="workout-time">8:00 AM</div>
                        </div>
                    </div>
                </div>

                <!-- Nutrition Tracking -->
                <div class="widget widget-md">
                    <div class="widget-header">
                        <div class="widget-title">Nutrition Tracking</div>
                        <div class="widget-action"><i class="fas fa-plus-circle"></i></div>
                    </div>
                    <div class="nutrition-chart">
                        <div class="nutrition-item">
                            <div class="nutrition-bar" style="height: 100px">
                                <div class="nutrition-fill nutrition-fill-protein" style="height: 75%"></div>
                            </div>
                            <div class="nutrition-label">Protein</div>
                            <div class="nutrition-value">150g / 200g</div>
                        </div>
                        <div class="nutrition-item">
                            <div class="nutrition-bar" style="height: 100px">
                                <div class="nutrition-fill nutrition-fill-carbs" style="height: 60%"></div>
                            </div>
                            <div class="nutrition-label">Carbs</div>
                            <div class="nutrition-value">180g / 300g</div>
                        </div>
                        <div class="nutrition-item">
                            <div class="nutrition-bar" style="height: 100px">
                                <div class="nutrition-fill nutrition-fill-fat" style="height: 85%"></div>
                            </div>
                            <div class="nutrition-label">Fat</div>
                            <div class="nutrition-value">68g / 80g</div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.querySelector('.sidebar');

        mobileMenuBtn.addEventListener('click', () => {
            sidebar.classList.toggle('mobile-open');
        });

        // Weekly Activity Chart
        const ctx = document.getElementById('weeklyActivityChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Calories Burned',
                    data: [2200, 2800, 2400, 2600, 3000, 2700, 2845],
                    borderColor: '#4ecdc4',
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: 'rgba(255, 255, 255, 0.7)'
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        },
                        ticks: {
                            color: 'rgba(255, 255, 255, 0.7)'
                        }
                    }
                }
            }
        });

        // Animate stat values
        document.querySelectorAll('.stat-value').forEach(stat => {
            const target = parseInt(stat.dataset.target);
            let current = 0;
            const increment = target / 50;
            const interval = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(interval);
                }
                stat.textContent = Math.round(current).toLocaleString();
            }, 30);
        });
    </script>
</body>
</html>