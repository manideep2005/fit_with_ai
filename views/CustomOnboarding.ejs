    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const nextBtn = document.getElementById('nextBtn');
            const prevBtn = document.getElementById('prevBtn');
            const submitBtn = document.getElementById('submitBtn');
            const formSteps = document.querySelectorAll('.form-step');
            const currentStepText = document.getElementById('currentStep');
            let currentStep = 0;

            function showStep(step) {
                formSteps.forEach((formStep, index) => {
                    formStep.classList.toggle('hidden', index !== step);
                });
                // update navigation button display
                prevBtn.style.display = step > 0 ? 'block' : 'none';
                nextBtn.style.display = step < formSteps.length - 1 ? 'block' : 'none';
                submitBtn.style.display = step === formSteps.length - 1 ? 'block' : 'none';
                currentStepText.textContent = step + 1;
            }

            nextBtn.addEventListener('click', () => {
                if (currentStep < formSteps.length - 1) {
                    currentStep++;
                    showStep(currentStep);
                }
            });

            prevBtn.addEventListener('click', () => {
                if (currentStep > 0) {
                    currentStep--;
                    showStep(currentStep);
                }
            });

            // Allow single selection for rating-scale (only one item may be selected)
            document.querySelectorAll('.rating-scale').forEach(scale => {
                scale.addEventListener('click', event => {
                    const ratingItem = event.target.closest('.rating-item');
                    if (ratingItem && scale.contains(ratingItem)) {
                        scale.querySelectorAll('.rating-item').forEach(item => item.classList.remove('selected'));
                        ratingItem.classList.add('selected');
                    }
                });
            });

            // Allow toggle selection for multiple-choice options (conditions-grid)
            document.querySelectorAll('.conditions-grid').forEach(grid => {
                grid.addEventListener('click', event => {
                    const conditionItem = event.target.closest('.condition-item');
                    if (conditionItem && grid.contains(conditionItem)) {
                        conditionItem.classList.toggle('selected');
                    }
                });
            });

            // Validate required input/select fields
            function validateRequiredFields() {
                let valid = true;
                document.querySelectorAll('[required]').forEach(input => {
                    if (!input.value.trim()) {
                        valid = false;
                        input.style.borderColor = 'red';
                    } else {
                        input.style.borderColor = '#e0e0e0';
                    }
                });
                return valid;
            }

            // When the user clicks the submitBtn, validate and submit the form
            submitBtn.addEventListener('click', async () => {
                if (!validateRequiredFields()) {
                    alert('Please fill in all required fields marked with *');
                    return;
                }

                // Collect form data
                const formData = {
                    age: document.getElementById('age').value,
                    gender: document.getElementById('gender').value,
                    height: document.getElementById('height').value,
                    weight: document.getElementById('weight').value,
                    fitnessGoals: Array.from(document.querySelectorAll('.goals-grid .condition-item.selected'))
                        .map(item => item.dataset.value)
                        .join(', '),
                    medicalConditions: Array.from(document.querySelectorAll('.conditions-grid .condition-item.selected'))
                        .map(item => item.dataset.value)
                        .join(', '),
                    activityLevel: document.querySelector('.activity-level .rating-item.selected')?.dataset.value || '',
                    dietaryPreferences: Array.from(document.querySelectorAll('.dietary-grid .condition-item.selected'))
                        .map(item => item.dataset.value)
                        .join(', ')
                };

                try {
                    const response = await fetch('/onboarding', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();
                    
                    if (result.success) {
                        // Show success message
                        alert('Assessment completed successfully!');
                        // Redirect to dashboard
                        window.location.href = result.redirectUrl;
                    } else {
                        alert(result.error || 'Error saving assessment data');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred while saving your assessment');
                }
            });

            showStep(currentStep);
        });
    </script>
