{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        { "source": "/js/(.*)", "destination": "/public/js/$1" },
        { "source": "/css/(.*)", "destination": "/public/css/$1" },
        { "source": "/images/(.*)", "destination": "/public/images/$1" },
        { "source": "/videos/(.*)", "destination": "/public/videos/$1" },
        { "source": "/(.*)", "destination": "/server.js" }
    ],
    "env": {
        "NODE_ENV": "production",
        "SESSION_SECRET": "your-secret-key-123"
    }
} 