{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/js/(.*)",
            "dest": "/public/js/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "/public/css/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/public/images/$1"
        },
        {
            "src": "/videos/(.*)",
            "dest": "/public/videos/$1"
        },
        {
            "src": "/CustomOnboarding",
            "dest": "/server.js",
            "headers": {
                "Cache-Control": "no-store, no-cache, must-revalidate"
            }
        },
        {
            "src": "/dashboard",
            "dest": "/server.js",
            "headers": {
                "Cache-Control": "no-store, no-cache, must-revalidate"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/server.js",
            "headers": {
                "Cache-Control": "no-store, no-cache, must-revalidate"
            }
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "SESSION_SECRET": "your-secret-key-123"
    }
} 